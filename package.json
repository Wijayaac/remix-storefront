{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "postinstall": "remix setup",
    "build": "npm run codegen && npm run build:css && remix build",
    "predev": "npm run codegen",
    "dev": "pm2-dev pm2.config.js",
    "dev:remix": "remix watch --sourcemap",
    "dev:css": "tailwindcss --output ./app/styles/tailwind.css --watch --postcss",
    "build:css": "tailwindcss --output ./app/styles/tailwind.css --minify --postcss",
    "codegen": "graphql-codegen --require dotenv/config --config codegen.yml",
    "clean": "del .cache .netlify app/graphql/index.ts app/styles/tailwind.css public/build netlify/functions/server/build"
  },
  "dependencies": {
    "@headlessui/react": "1.4.2",
    "@heroicons/react": "1.0.5",
    "@mcansh/fetcher": "0.2.2",
    "@netlify/functions": "0.10.0",
    "@remix-run/netlify": "1.0.6",
    "@remix-run/node": "1.0.6",
    "@remix-run/react": "1.0.6",
    "date-fns": "2.27.0",
    "graphql": "16.0.1",
    "graphql-request": "3.7.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remix": "1.0.6",
    "type-fest": "2.8.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/typescript": "2.4.1",
    "@graphql-codegen/typescript-graphql-request": "4.3.1",
    "@graphql-codegen/typescript-operations": "2.2.1",
    "@remix-run/dev": "1.0.6",
    "@tailwindcss/aspect-ratio": "0.3.0",
    "@tailwindcss/forms": "0.3.4",
    "@tailwindcss/typography": "0.4.1",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "autoprefixer": "10.4.0",
    "del-cli": "4.0.1",
    "netlify-cli": "8.0.15",
    "pm2": "5.1.2",
    "postcss-100vh-fix": "1.0.2",
    "tailwindcss": "2.2.19",
    "typescript": "4.5.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
